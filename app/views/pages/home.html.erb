    </div>

    <div class="row">
      <div class="col-md-12 slide-wrapper">

        <div class="slideshow">
          <%= content_tag :div, nil, class:'btn-nav prev' %>
          <%= content_tag :div, nil, class:'btn-nav next' %>
          <div class="slide active">
            <%= image_tag 'slider/slide1.png' %>
          </div>
          <div class="slide">
            <%= image_tag 'slider/slide2.png' %>
          </div>
          <div class="slide">
            <%= image_tag 'slider/slide3.png' %>
          </div>
          <div class="slide">
            <%= image_tag 'slider/slide4.png' %>
          </div>
          <div class="slide">
            <%= image_tag 'slider/slide5.png' %>
          </div>
        </div>

      </div>
    </div>

  </div>
</div>

