<div id="map" style="height:400px;">

  <iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.com.mx/?ie=UTF8&amp;ll=44.796631,-93.370818&amp;spn=0.023259,0.038495&amp;t=m&amp;z=15&amp;output=embed"></iframe>

  <div class="marker-wrapper">
    <%= content_tag :div, nil, class:'marker-icon' %>
    <%= content_tag :div, nil, class:'marker' %>
  </div>

</div>

<div id="info">
  <div class="container">

    <div class="row">
      <div class="col-md-8 message">
        <h3>Send us a message</h3>
        <p>
          You can contact us with anything related to Rivendell Education Company. <br/> We'll get in touch with you as soon as possible.
        </p>
        <%= render 'form' %>
      </div>

      <div class="col-md-4 contact">

        <div class="address">
          <h3>Our address</h3>
          <p>
            Rivendell Education Company<br />
            6820 Auto Club Road, Suite T<br />
            Bloomington, MN  55438<br />
            USA
          </p>
        </div>

        <div class="phone">
          <h3>By phone</h3>
          <p>1-952-996-1451</p>
        </div>

        <div class="social">
          <%= link_to icon('facebook-official', nil, class:'fa-3x m-r-md'), @facebok_url, target:'_blank' %>
          <%= link_to icon('twitter', nil, class:'fa-3x m-r-md'), @twitter_url, target:'_blank' %>
          <%= link_to icon('pinterest', nil, class:'fa-3x'), @pinterest_url, target:'_blank' %>
        </div>

      </div>

    </div>

  </div>
</div>
